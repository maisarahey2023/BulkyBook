@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
    }


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
			</a>
		</div>
	</div>
    <br /><br />
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Cover Type Name
			</th>
            <th>
                Display Order
			</th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Name
				</td>
                <td width="20%">
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> &nbsp; Edit Cover Type
                    </a>
                </td>
                <td width="20%">
                    <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary">
                        <i class="bi bi-trash-fill"></i>&nbsp; Delete Cover Type
                    </a>
                </td>
			</tr>
        }
    </tbody>

</table>